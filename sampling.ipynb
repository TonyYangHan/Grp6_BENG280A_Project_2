import React, { useState, useEffect, useMemo } from 'react';
import { RefreshCcw, BarChart3, Info, Circle, Settings, Users, Grid, Layers, Boxes, FileDigit, ScanLine } from 'lucide-react';

const CANVAS_WIDTH = 500;
const CANVAS_HEIGHT = 300;

// Define colors
const COLORS = {
  A: '#EF4444', // Red
  B: '#3B82F6', // Blue
  C: '#10B981', // Emerald
  highlight: '#F59E0B', // Amber
  
  // Phantom Colors (Grayscale-ish maps)
  P_BG: '#e2e8f0',   // High diffusion (Bright)
  P_CELL: '#475569', // Low diffusion (Dark)
  P_MEM: '#0f172a',  // Membrane (Very Dark)
};

const SamplingVisualizer = () => {
  const [population, setPopulation] = useState([]);
  const [sample, setSample] = useState([]);
  const [method, setMethod] = useState('random');
  const [sampleSize, setSampleSize] = useState(50);
  const [isSampling, setIsSampling] = useState(false);
  
  // New state: Data Source Mode
  // 'scatter' = Original Random Points
  // 'phantom' = Grid based Image Phantom
  const [dataSource, setDataSource] = useState('phantom'); 

  const POPULATION_SIZE = dataSource === 'phantom' ? 800 : 200; // Grid needs more points

  // Initialize population data
  useEffect(() => {
    if (dataSource === 'scatter') {
      generateScatterPopulation();
    } else {
      generatePhantomPopulation();
    }
  }, [dataSource]);

  const generateScatterPopulation = () => {
    const newPop = [];
    const clusters = [
      { x: 100, y: 100, id: 1 },
      { x: 350, y: 100, id: 2 },
      { x: 100, y: 220, id: 3 },
      { x: 350, y: 220, id: 4 },
    ];

    for (let i = 0; i < POPULATION_SIZE; i++) {
      const category = Math.random() < 0.5 ? 'A' : (Math.random() < 0.6 ? 'B' : 'C');
      const clusterIdx = Math.floor(Math.random() * clusters.length);
      const cluster = clusters[clusterIdx];
      const x = Math.min(Math.max(cluster.x + (Math.random() - 0.5) * 150, 20), CANVAS_WIDTH - 20);
      const y = Math.min(Math.max(cluster.y + (Math.random() - 0.5) * 120, 20), CANVAS_HEIGHT - 20);

      newPop.push({
        id: i,
        x,
        y,
        value: Math.floor(Math.random() * 100),
        category,
        clusterId: cluster.id,
        type: 'point'
      });
    }
    setPopulation(newPop);
    setSample([]);
  };

  const generatePhantomPopulation = () => {
    const newPop = [];
    const rows = 20;
    const cols = 40;
    const cellWidth = CANVAS_WIDTH / cols;
    const cellHeight = CANVAS_HEIGHT / rows;
    
    // Define some "cells" (circles) in the phantom
    const cells = [
      { cx: 10, cy: 5, r: 3 },  // Top Left
      { cx: 30, cy: 10, r: 5 }, // Center Right
      { cx: 15, cy: 15, r: 4 }, // Bottom Left
    ];

    let idCounter = 0;
    for (let r = 0; r < rows; r++) {
      for (let c = 0; c < cols; c++) {
        // Determine tissue type based on location
        let tissue = 'Background'; // Default ECS
        let minDist = Infinity;
        
        // Check distance to cell centers
        cells.forEach(cell => {
          const dist = Math.sqrt(Math.pow(c - cell.cx, 2) + Math.pow(r - cell.cy, 2));
          if (dist < cell.r) tissue = 'Cell'; // Cyto
          if (Math.abs(dist - cell.r) < 0.8) tissue = 'Membrane'; // Edge
        });

        // Simulate Signal Value (Intensity) + Noise
        // Background = High Signal (Water), Cell = Low Signal (Restricted), Membrane = Very Low
        let baseValue = tissue === 'Background' ? 80 : (tissue === 'Cell' ? 40 : 10);
        let noise = (Math.random() - 0.5) * 20;
        let value = Math.max(0, Math.min(100, baseValue + noise));

        // Assign Cluster ID for Cluster Sampling (Spatial Blocks)
        // Divide grid into 4x4 blocks
        const blockRow = Math.floor(r / 5);
        const blockCol = Math.floor(c / 8);
        const clusterId = blockRow * 5 + blockCol; // unique ID for each spatial block

        newPop.push({
          id: idCounter++,
          r, c, // Grid coordinates
          x: c * cellWidth + cellWidth/2,
          y: r * cellHeight + cellHeight/2,
          width: cellWidth,
          height: cellHeight,
          value,
          category: tissue, // For Stratified
          clusterId,        // For Cluster
          type: 'pixel'
        });
      }
    }
    setPopulation(newPop);
    setSample([]);
    // Adjust default sample size for larger population
    setSampleSize(80);
  };

  const handleSample = () => {
    setIsSampling(true);
    let selectedIndices = [];
    const pop = [...population];

    switch (method) {
      case 'random':
        const shuffled = [...pop].sort(() => 0.5 - Math.random());
        selectedIndices = shuffled.slice(0, sampleSize).map(p => p.id);
        break;

      case 'systematic':
        // Sort by position (scanline order for grid, X for scatter)
        const sorted = dataSource === 'phantom' 
          ? pop.sort((a, b) => (a.r - b.r) || (a.c - b.c)) 
          : pop.sort((a, b) => a.x - b.x);
          
        const k = Math.max(1, Math.floor(pop.length / sampleSize));
        const start = Math.floor(Math.random() * k);
        for (let i = 0; i < sampleSize; i++) {
          const idx = start + i * k;
          if (idx < sorted.length) {
            selectedIndices.push(sorted[idx].id);
          }
        }
        break;

      case 'stratified':
        // Stratify by Category/Tissue
        const groups = {};
        pop.forEach(p => {
          if (!groups[p.category]) groups[p.category] = [];
          groups[p.category].push(p);
        });
        
        Object.keys(groups).forEach(key => {
          const group = groups[key];
          const groupRatio = group.length / pop.length;
          const targetCount = Math.max(1, Math.round(sampleSize * groupRatio));
          const shuffledGroup = group.sort(() => 0.5 - Math.random());
          const selected = shuffledGroup.slice(0, targetCount).map(p => p.id);
          selectedIndices = [...selectedIndices, ...selected];
        });
        break;

      case 'cluster':
        // Get all unique cluster IDs
        const uniqueClusters = [...new Set(pop.map(p => p.clusterId))];
        // Estimate how many clusters we need to reach sampleSize
        // Average cluster size?
        const avgSize = pop.length / uniqueClusters.length;
        const clustersNeeded = Math.max(1, Math.round(sampleSize / avgSize));
        
        const chosenClusters = uniqueClusters
          .sort(() => 0.5 - Math.random())
          .slice(0, clustersNeeded);
        
        selectedIndices = pop
          .filter(p => chosenClusters.includes(p.clusterId))
          .map(p => p.id);
        break;

      default:
        break;
    }

    setSample(selectedIndices);
    setTimeout(() => setIsSampling(false), 300);
  };

  const stats = useMemo(() => {
    const calcStats = (indices) => {
      if (indices.length === 0) return { mean: 0, counts: {} };
      const items = population.filter(p => indices.includes(p.id));
      const sum = items.reduce((acc, cur) => acc + cur.value, 0);
      
      const counts = items.reduce((acc, cur) => {
        acc[cur.category] = (acc[cur.category] || 0) + 1;
        return acc;
      }, {});
      
      return {
        mean: sum / items.length,
        counts,
        total: items.length
      };
    };

    const popStats = calcStats(population.map(p => p.id));
    const sampleStats = calcStats(sample);

    return { pop: popStats, sample: sampleStats };
  }, [population, sample]);

  const methodInfo = {
    random: {
      title: 'Simple Random (Random)',
      desc: dataSource === 'phantom' 
        ? 'Randomly selects pixels. Simulates random noise sampling, resulting in a sparse, noisy, but structurally intact image.' 
        : 'Every individual has an equal chance of being selected. The most basic method.',
      icon: <Users className="w-5 h-5" />
    },
    systematic: {
      title: 'Systematic Sampling (Systematic)',
      desc: dataSource === 'phantom' 
        ? 'Selects every k-th pixel. Simulates scanline sampling or MRI k-space undersampling, creating regular striped patterns.'
        : 'Selects every k-th individual from a sorted population.',
      icon: <Grid className="w-5 h-5" />
    },
    stratified: {
      title: 'Stratified Sampling (Stratified)',
      desc: dataSource === 'phantom' 
        ? 'Samples proportionally by tissue type (Background/Cell/Membrane). Ensures even tiny structures like membranes are sampled.'
        : 'Divides population into strata, then samples randomly from each stratum. Higher precision.',
      icon: <Layers className="w-5 h-5" />
    },
    cluster: {
      title: 'Cluster Sampling (Cluster)',
      desc: dataSource === 'phantom' 
        ? 'Randomly selects "patches" of the image. Simulates scanning specific regions, resulting in large missing blocks.'
        : 'Randomly selects clusters and surveys the entire cluster.',
      icon: <Boxes className="w-5 h-5" />
    }
  };

  // Helper to get color based on value/type
  const getPointColor = (p) => {
    if (dataSource === 'scatter') return COLORS[p.category];
    // Phantom Grayscale mapping
    // Map value 0-100 to grayscale hex
    const v = Math.floor((p.value / 100) * 200 + 20); // 20 to 220
    return `rgb(${v},${v},${v})`;
  };

  return (
    <div className="min-h-screen bg-slate-50 p-4 md:p-8 font-sans text-slate-800">
      <div className="max-w-6xl mx-auto space-y-6">
        
        {/* Header */}
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 bg-white p-6 rounded-xl shadow-sm border border-slate-200">
          <div>
            <h1 className="text-2xl font-bold text-slate-900 flex items-center gap-2">
              <ScanLine className="text-blue-600" />
              Sampling Methods: {dataSource === 'phantom' ? 'Phantom Imaging' : 'General Statistics'}
            </h1>
            <p className="text-slate-500 mt-1">
              {dataSource === 'phantom' 
                ? 'Simulating signal acquisition from a Phantom' 
                : 'Interactive exploration of different sampling strategies'}
            </p>
          </div>
          <div className="flex gap-2">
             <button 
              onClick={() => setDataSource(dataSource === 'phantom' ? 'scatter' : 'phantom')}
              className={`flex items-center gap-2 px-4 py-2 rounded-lg transition-colors text-sm font-medium border ${
                dataSource === 'phantom' 
                  ? 'bg-slate-800 text-white border-slate-800' 
                  : 'bg-white text-slate-700 border-slate-300 hover:bg-slate-50'
              }`}
            >
              <FileDigit size={16} /> 
              {dataSource === 'phantom' ? 'Switch to Scatter Mode' : 'Switch to Phantom Mode'}
            </button>
            <button 
              onClick={() => dataSource === 'phantom' ? generatePhantomPopulation() : generateScatterPopulation()}
              className="flex items-center gap-2 px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition-colors text-sm font-medium"
            >
              <RefreshCcw size={16} /> Reset
            </button>
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-12 gap-6">
          
          {/* Controls Panel */}
          <div className="lg:col-span-3 space-y-4">
            <div className="bg-white p-5 rounded-xl shadow-sm border border-slate-200 space-y-6">
              <div className="flex items-center gap-2 text-lg font-semibold text-slate-800 border-b pb-3">
                <Settings size={20} />
                Parameters
              </div>
              
              <div className="space-y-3">
                <label className="text-sm font-medium text-slate-700">Sampling Method</label>
                <div className="grid grid-cols-1 gap-2">
                  {Object.keys(methodInfo).map((m) => (
                    <button
                      key={m}
                      onClick={() => { setMethod(m); setSample([]); }}
                      className={`flex items-center gap-3 px-4 py-3 rounded-lg text-left transition-all ${
                        method === m 
                          ? 'bg-blue-50 border-blue-200 text-blue-700 border shadow-sm' 
                          : 'bg-white border border-slate-200 hover:bg-slate-50 text-slate-600'
                      }`}
                    >
                      <span className={`${method === m ? 'text-blue-600' : 'text-slate-400'}`}>
                        {methodInfo[m].icon}
                      </span>
                      <span className="text-sm font-medium">{methodInfo[m].title.split(' (')[0]}</span>
                    </button>
                  ))}
                </div>
              </div>

              <div className="space-y-3">
                <label className="flex justify-between text-sm font-medium text-slate-700">
                  <span>Sample Size (n)</span>
                  <span className="text-blue-600 font-bold">{sampleSize}</span>
                </label>
                <input
                  type="range"
                  min={dataSource === 'phantom' ? "20" : "10"}
                  max={dataSource === 'phantom' ? "400" : "100"}
                  step={dataSource === 'phantom' ? "10" : "5"}
                  value={sampleSize}
                  onChange={(e) => setSampleSize(parseInt(e.target.value))}
                  className="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-blue-600"
                />
                <p className="text-xs text-slate-400">
                  Population N = {population.length}
                </p>
              </div>

              <button
                onClick={handleSample}
                className="w-full py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold shadow-md active:transform active:scale-95 transition-all flex justify-center items-center gap-2"
              >
                Start Sampling
              </button>
            </div>

            <div className="bg-blue-50 border border-blue-100 p-4 rounded-xl text-sm text-blue-800 leading-relaxed">
              <div className="flex items-center gap-2 font-bold mb-2">
                <Info size={16} />
                Method Description
              </div>
              {methodInfo[method].desc}
            </div>
          </div>

          {/* Visualization - Center */}
          <div className="lg:col-span-6 bg-white p-6 rounded-xl shadow-sm border border-slate-200 flex flex-col">
             <h2 className="text-lg font-semibold text-slate-800 mb-4 flex justify-between items-center">
              <span>{dataSource === 'phantom' ? 'Phantom View' : 'Distribution View'}</span>
              <div className="flex gap-4 text-xs font-normal">
                {dataSource === 'phantom' ? (
                  <>
                    <span className="flex items-center gap-1"><span className="w-3 h-3 rounded-sm bg-slate-200"></span> BG (Water)</span>
                    <span className="flex items-center gap-1"><span className="w-3 h-3 rounded-sm bg-slate-500"></span> Cell</span>
                    <span className="flex items-center gap-1"><span className="w-3 h-3 rounded-sm bg-slate-900"></span> Membrane</span>
                  </>
                ) : (
                   <span className="text-slate-400">Random Clusters</span>
                )}
              </div>
            </h2>
            
            <div className="relative flex-grow flex items-center justify-center bg-slate-50 rounded-lg border border-slate-100 overflow-hidden" style={{ minHeight: '400px' }}>
              <svg width="100%" height="100%" viewBox={`0 0 ${CANVAS_WIDTH} ${CANVAS_HEIGHT}`} className="max-w-full">
                
                {/* Phantom Grid Mode */}
                {dataSource === 'phantom' && population.map((p) => {
                   const isSelected = sample.includes(p.id);
                   // In phantom mode, if not selected, we show it very faint or black (simulating missing data)
                   // But for visualization purpose:
                   // Selected = True Color
                   // Unselected = Very Faint Gray (Ghost)
                   const fill = isSelected ? getPointColor(p) : '#f1f5f9';
                   
                   return (
                     <rect
                        key={p.id}
                        x={p.x - p.width/2}
                        y={p.y - p.height/2}
                        width={p.width}
                        height={p.height}
                        fill={fill}
                        stroke={isSelected ? 'none' : '#e2e8f0'} // Light grid lines for unselected
                        strokeWidth={0.5}
                        className="transition-colors duration-200"
                     />
                   );
                })}

                {/* Scatter Mode */}
                {dataSource === 'scatter' && population.map((p) => {
                  const isSelected = sample.includes(p.id);
                  return (
                    <circle
                      key={p.id}
                      cx={p.x}
                      cy={p.y}
                      r={isSelected ? 6 : 4}
                      fill={COLORS[p.category]}
                      opacity={sample.length > 0 && !isSelected ? 0.3 : 0.9}
                      stroke={isSelected ? '#1e293b' : 'none'}
                      strokeWidth={isSelected ? 2 : 0}
                      className="transition-all duration-300 ease-in-out"
                    />
                  );
                })}
              </svg>
            </div>
            
            <div className="mt-4 flex items-center justify-center gap-6 text-sm text-slate-600">
              <div className="flex items-center gap-2">
                <div className={`w-4 h-4 ${dataSource === 'phantom' ? 'bg-slate-100 border border-slate-200' : 'bg-slate-300 rounded-full opacity-50'}`}></div>
                <span>Missing (Unsampled)</span>
              </div>
              <div className="flex items-center gap-2">
                <div className={`w-4 h-4 ${dataSource === 'phantom' ? 'bg-slate-600' : 'bg-blue-500 rounded-full border-2 border-slate-800'}`}></div>
                <span className="font-semibold text-slate-900">Sampled Signal</span>
              </div>
            </div>
          </div>

          {/* Statistics Panel */}
          <div className="lg:col-span-3 space-y-4">
             <div className="bg-white p-5 rounded-xl shadow-sm border border-slate-200 h-full">
              <h3 className="text-lg font-semibold text-slate-800 mb-6 flex items-center gap-2">
                <BarChart3 className="text-purple-600" />
                {dataSource === 'phantom' ? 'Reconstruction Stats' : 'Stats Comparison'}
              </h3>

              <div className="space-y-6">
                
                {/* Mean Value */}
                <div>
                  <p className="text-xs text-slate-500 uppercase tracking-wider mb-2">Mean Signal Intensity</p>
                  <div className="space-y-3">
                    <div className="flex justify-between items-center text-sm">
                      <span className="text-slate-600">Ground Truth</span>
                      <span className="font-mono font-medium">{stats.pop.mean.toFixed(2)}</span>
                    </div>
                    <div className="flex justify-between items-center text-sm">
                      <span className="text-blue-600 font-medium">Reconstruction</span>
                      <span className="font-mono font-bold text-blue-600">
                        {stats.sample.mean > 0 ? stats.sample.mean.toFixed(2) : '-'}
                      </span>
                    </div>
                    {stats.sample.mean > 0 && (
                      <div className="text-xs text-right text-slate-400">
                        Error: {Math.abs(stats.pop.mean - stats.sample.mean).toFixed(2)}
                      </div>
                    )}
                  </div>
                </div>

                {/* Categories */}
                <div>
                  <p className="text-xs text-slate-500 uppercase tracking-wider mb-3">
                    {dataSource === 'phantom' ? 'Tissue Coverage' : 'Class Distribution'}
                  </p>
                  
                  {/* Custom Legend for Phantom */}
                  {dataSource === 'phantom' && (
                    <div className="space-y-3">
                      {['Background', 'Cell', 'Membrane'].map(cat => {
                         const popCount = stats.pop.counts[cat] || 0;
                         const sampleCount = stats.sample.counts[cat] || 0;
                         const coverage = popCount > 0 ? (sampleCount / popCount * 100) : 0;
                         
                         return (
                           <div key={cat} className="text-sm">
                             <div className="flex justify-between mb-1">
                               <span className="text-slate-600 text-xs">{cat}</span>
                               <span className="text-slate-900 font-mono text-xs">{sampleCount}/{popCount}</span>
                             </div>
                             <div className="w-full bg-slate-100 h-2 rounded-full overflow-hidden">
                               <div 
                                 className="bg-blue-500 h-full rounded-full transition-all duration-500"
                                 style={{ width: `${(sampleCount / stats.sample.total) * 100}%` }} // Showing proportion in sample
                               ></div>
                             </div>
                           </div>
                         )
                      })}
                      <p className="text-[10px] text-slate-400 mt-2">* Bar shows proportion in sample</p>
                    </div>
                  )}

                  {/* Original Chart for Scatter */}
                  {dataSource === 'scatter' && (
                     <div className="flex h-32 items-end justify-between gap-2 px-2 border-b border-slate-200 pb-2">
                        {['A', 'B', 'C'].map(cat => {
                            const popPercent = (stats.pop.counts[cat] / population.length) * 100;
                            const samplePercent = stats.sample.total > 0 
                              ? (stats.sample.counts[cat] / stats.sample.total) * 100 
                              : 0;
                            
                            return (
                              <div key={cat} className="flex-1 flex flex-col justify-end items-center gap-1 group relative">
                                <div 
                                  className="w-full border border-slate-300 rounded-t opacity-30 absolute bottom-0"
                                  style={{ height: `${popPercent}%` }}
                                ></div>
                                <div 
                                  className={`w-2/3 rounded-t transition-all duration-500 ${
                                    cat === 'A' ? 'bg-red-500' : cat === 'B' ? 'bg-blue-500' : 'bg-emerald-500'
                                  }`}
                                  style={{ height: `${samplePercent}%` }}
                                ></div>
                                <span className="text-xs font-medium text-slate-600">{cat}</span>
                              </div>
                            )
                        })}
                     </div>
                  )}
                </div>

              </div>
             </div>
          </div>

        </div>
      </div>
    </div>
  );
};

export default SamplingVisualizer;